.row
  .col-sm-3
    = link_to viewer_url(@multimap), class: 'btn btn-info btn-block' do
      View Map
    = link_to edit_multimap_path(@multimap), class: 'btn btn-default btn-block' do
      %i.fa.fa-edit
      Edit
    = link_to @multimap, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' do
      %i.fa.fa-trash-o
      Delete
    = link_to multimaps_path, class: 'btn btn-default btn-block' do
      %i.fa.fa-arrow-left
      Back

    %hr

    = link_to available_multimap_path(@multimap), class: 'btn btn-success btn-block' do
      %i.fa.fa-plus
      Add Map

  .col-sm-9
    .panel.panel-default
      .panel-heading
        %h1.panel-title= @multimap.name
      .panel-body
        %p
          %strong Description:
          = @multimap.description
        %p
          %strong Active:
          = @multimap.active ? 'Yes' : 'No'

    - if @multimap.maps.any?
      .panel.panel-default
        .panel-heading
          %h1.panel-title Added maps
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Layers
              %th
          %tbody
            - @multimap.maps.find_each do |map|
              %tr
                %td= map.title
                %td= map.geojson_layers.count + map.wms_layers.count
                %td.text-right
                  .btn-group
                    = link_to 'View', viewer_url(map), class: 'btn btn-default'
                    = link_to 'Layers', map_path(map), class: 'btn btn-default'
