.row
  .col-sm-3
    = link_to 'New Multimap', new_multimap_path, class: 'btn btn-success btn-block'

  .col-sm-9

    .panel.panel-default
      .panel-heading
        %h1.panel-title Multimaps

      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Active
            %th # Maps
            %th{:colspan => "3"}
        %tbody
          - @multimaps.each do |multimap|
            %tr
              %td= multimap.name
              %td= multimap.active
              %td= multimap.maps.count
              %td.text-right
                = link_to multimap, class: 'btn btn-default' do
                  View more info
                  %i.fa.fa-arrow-right
