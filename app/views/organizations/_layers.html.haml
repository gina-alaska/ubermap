%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ type: 'button', data: { toggle: 'collapse', target: '#navbar' }}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Layers', @organization, class: 'navbar-brand'
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to new_organization_geojson_layer_path(@organization) do
            %i.fa.fa-plus.text-success
            New GeoJSON Layer
        %li
          = link_to new_organization_wms_layer_path(@organization) do
            %i.fa.fa-plus.text-success
            New WMS Layer

.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h1.panel-title GeoJSON layers
      = render 'geojson_layers/list', geojson_layers: @organization.geojson_layers
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h1.panel-title WMS layers
      = render 'wms_layers/list', wms_layers: @organization.wms_layers
