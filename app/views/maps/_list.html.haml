%table.table.table-condensed.table-stripped
  %thead
    %tr
      %th Title
      %th URL
      %th
  %tbody
    - maps.each do |map|
      %tr
        %td= map.title
        %td= link_to viewer_url(map), viewer_url(map)
        %td.text-right
          .btn-group
            = link_to viewer_url(map), class: 'btn btn-default' do
              %i.fa.fa-eye
              Preview
            = link_to [@organization, map], class: 'btn btn-primary' do
              Manage
              %i.fa.fa-arrow-right
