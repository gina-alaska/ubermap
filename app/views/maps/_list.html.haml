%table.table.table-condensed.table-stripped
  %thead
    %tr
      %th Name
      %th Permalink
      %th.col-sm-1 # Layers
      %th.text-right Actions
  %tbody
    - maps.each do |map|
      %tr
        %td= map.title
        %td= link_to viewer_url(map), viewer_url(map)
        %td= map.map_layers.count
        %td.text-right
          = link_to [@organization, map], class: 'btn btn-sm btn-primary' do
            Manage
            %i.fa.fa-arrow-right
