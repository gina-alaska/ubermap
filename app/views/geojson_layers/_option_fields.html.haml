.form-group{ style: 'margin-left:20px;' }
  = f.fields_for :options, OpenStruct.new(f.object.options) do |opts|
    %label.checkbox
      = opts.check_box :toggle, { }, 'yes', 'no'
      Toggleable

    %label.checkbox
      = opts.check_box :clickable, { }, 'yes', 'no'
      Clickable

    %label.checkbox
      = opts.check_box :auto_zoom, { }, 'yes', 'no'
      Auto zoom
