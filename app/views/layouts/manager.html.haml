!!!
%html
  %head
    = render 'layouts/title'
    = stylesheet_link_tag    "https://api.tiles.mapbox.com/mapbox.js/v3.0.1/mapbox.css", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "https://api.tiles.mapbox.com/mapbox.js/v3.0.1/mapbox.js", "data-turbolinks-track" => true
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body.with_header
    = render 'layouts/spinner'

    %section.header
      = render 'layouts/header'

    .container
      = render 'layouts/flash_messages'
      = render 'layouts/breadcrumb'

      - if content_for?(:side_menu)
        = render 'layouts/twocol'
      - else
        = yield
