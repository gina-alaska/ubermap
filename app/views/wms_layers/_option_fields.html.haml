.form-group
  = f.fields_for :options, OpenStruct.new(f.object.options) do |opts|
    .form-group{ style: 'padding-left: 25px;'}
      %label.checkbox
        = opts.check_box :baselayer, { }, 'yes', 'no'
        Baselayer
      %label.checkbox
        = opts.check_box :timeslider, { }, 'yes', 'no'
        Timeslider
      %label.checkbox
        = opts.check_box :wms_request_using_timerange, { }, 'yes', 'no'
        Use range of dates for requests
    .form-group
      = opts.label :start_time
      = opts.text_field :start_time, class: 'form-control'
    .form-group
      = opts.label :end_time
      = opts.text_field :end_time, class: 'form-control'
    .form-group
      = opts.label :interval
      = opts.text_field :interval, class: 'form-control'
    .form-group
      = opts.label :slider_title
      = opts.text_field :slider_title, class: 'form-control'
    .form-group
      = link_to [@organization, @wms_layer], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' do
        %i.fa.fa-trash
        Delete
